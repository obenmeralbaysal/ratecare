APP_NAME="Hotel DigiLab V2"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8001

# Application Configuration
APP_NAME="Hotel DigiLab"
APP_URL=http://localhost
APP_DEBUG=true
APP_ENV=development
APP_TIMEZONE=UTC

# Security
APP_KEY=your-secret-key-here-change-this-in-production
HASH_ALGO=sha256
SESSION_LIFETIME=120
CSRF_TOKEN_NAME=_token

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=hotel_digilab
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# API Keys and Credentials
RESELIVA_USERNAME=your_reseliva_username
RESELIVA_PASSWORD=your_reseliva_password

OTELZ_USERNAME=your_otelz_username
OTELZ_PASSWORD=your_otelz_password
OTELZ_PARTNER_ID=1316

SABEE_API_KEY=your_sabee_api_key

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=hotel_digilab
CACHE_DEFAULT_TTL=3600

# Mail Configuration
MAIL_DRIVER=mail
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@hoteldigilab.com
MAIL_FROM_NAME="Hotel DigiLab"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=storage/uploads

# API Configuration
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=60
API_VERSION=v1

# Widget Configuration
WIDGET_CACHE_TTL=1800
WIDGET_TRACKING_ENABLED=true
WIDGET_DEFAULT_THEME=default

# External Services
BOOKING_API_URL=https://api.booking.com
EXPEDIA_API_URL=https://api.expedia.com
RATE_UPDATE_INTERVAL=3600

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=storage/logs/app.log
LOG_MAX_FILES=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Performance
ENABLE_QUERY_LOG=false
ENABLE_PROFILING=false
MEMORY_LIMIT=256M

# Localization
DEFAULT_LOCALE=en
FALLBACK_LOCALE=en
AVAILABLE_LOCALES=en,tr
